* {
    font-size: 12px;
}

#alertDiv {
    display: none;
    width: 100%;
    height: 100%;
    background-color: #1E9FFF;
}

#alertNorth {
    width: 100%;
    height: 90%;
    background-color: #00F7DE;
    /*float: left;*/
}

#alertSouth {
    width: 100%;
    height: 10%;
    background-color: #DBE5F4;
    text-align: center;
}

#alertNorthWest {
    width: 20%;
    height: 100%;
    background-color: #FFFFFF;
    float: left;
}

#alertNorthEast {
    width: 80%;
    height: 100%;
    background-color: #F0F0F0;
    float: left;
}

.alert-ul-title {
    background-color: #346c9c;
    padding: 5px;
    font-size: 15px;
}

#alertNorthWest ul li {
    margin: 0px;
    padding: 15px;
    font-size: 20px;
}

#alertNorthWest ul li:hover {
    cursor:hand;
    background:#9c5915;
}

#alertSouth button {
    font-size: 20px;
    margin: 10px 20px;
}

.alert-sort {
    display: none;
}

.alert-sort.show {
    display: inherit;
}

#mainDis {
    width: 100%;
    height: 90%;
}

#settings {
    width: 100%;
    height: 60%;
    background-color: #c9c9c9;
}

#updateContent {
    width: 100%;
    height: 40%;
    background-color: rgb(0, 74, 247);
}

#updateContent textarea {
    height: 100%;
    width: 100%;
}

#mainDis .left {
    float: left;
    width: 50%;
}

#mainDis .right {
    float: left;
    width: 50%;
}

.activeTasks dd a.on {
    background-color: rgb(247, 183, 105);
}

